+alias org.eolang.hamcrest.assert-that
+alias org.eolang.sys.call
+alias org.eolang.threads.thread
+alias org.eolang.threads.sleep
+architect 28lev11@gmail.com
+home https://github.com/objectionary/eo-threads
+junit
+package org.eolang.threads
+version 0.0.0

[] > thread-returns-string
  thread "hello" > t
  seq > @
    t.start
    QQ.io.stdout
      QQ.txt.sprintf
        "t was started. You must wait after me\n"
    eq.
      "hello"
      join.
        t

[] > thread-returns-number
  thread 7 > t
  seq > @
    t.start
    QQ.io.stdout
      QQ.txt.sprintf
        "t was started. You must wait after me\n"
    eq.
      7
      join.
        t

[] > complex-argument
  thread > t
    5.plus
      5
  seq > @
    t.start
    eq.
      10
      join.
        t

[] > multiple
  QQ.threads.thread > a
    2.plus 2
  QQ.threads.thread > b
    1.plus 1
  seq > @
    a.start
    b.start
    eq.
      times.
        a.join
        b.join
      8

[] > divide-by-zero-in-thread
  thread > t
    1.div 0
  assert-that > @
    seq
      t.start
      try
        []
          t.join > @
        [e]
          e > @
        nop
    $.equal-to
      "The 1th argument of 'int.div' is invalid: division by zero is infinity"

[] > gettimeofday-returns-in-nanos
  memory 0 > start
  memory 0 > finish
  if. > @
    QQ.sys.uname.is-windows
    nop
    assert-that
      seq
        start.write
          call "gettimeofday"
        sleep 200
        finish.write
          call "gettimeofday"
        finish.minus start
      $.all-of
        $.less-than
          1000000
        $.greater-than
          100000

[] > parallel-sleep
  thread > t1
    sleep 300
  thread > t2
    sleep 300
  memory 0 > start
  memory 0 > finish
  if. > @
    QQ.sys.uname.is-windows
    nop
    assert-that
      seq
        start.write
          call "gettimeofday"
        t1.start
        t2.start
        t1.join
        t2.join
        finish.write
          call "gettimeofday"
        lt.
          finish.minus start
          600000
      $.equal-to TRUE

[] > thread-stops
  thread > t
    sleep 1000
  assert-that > @
    seq
      t.start
      t.stop
      try
        []
          t.join > @
        [e]
          e.slice > @
            0
            20
        nop
    $.equal-to
      "Cannot give dataized"

